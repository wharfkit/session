{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "isolatedModules": false,
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es6",
        "types": ["mocha", "node"],
        "baseUrl": "../",
        "paths": {
            "$lib": ["src"],
            "$test": ["test"],
            "$test/*": ["test/*"]
        }
    },
    "include": ["../src", "tests/**/*.ts"]
}
