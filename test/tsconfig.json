{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "isolatedModules": false,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es6",
        "types": ["mocha", "node"],
        "baseUrl": "..",
        "paths": {
            "$lib": ["src"],
            "$test": ["test"],
            "$test/*": ["test/*"]
        }
    },
    "include": ["*.ts", "**/*.ts"]
}
